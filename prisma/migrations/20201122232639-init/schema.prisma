generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = "***"
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  vatId     String   @map("vat_id")
  rate      Float
  createdAt DateTime @default(now()) @map("created_at")
  task      Task[]

  @@map("client")
}

model Task {
  id           Int           @id @default(autoincrement())
  clientId     Int           @map("client_id")
  description  String
  specialRate  Float         @map("special_rate")
  createdAt    DateTime      @default(now()) @map("created_at")
  client       Client        @relation(fields: [clientId], references: [id])
  invoices     TaskInvoice[]
  times        TaskTime[]

  @@index([clientId], name: "client_id")
  @@map("task")
}

model TaskTime {
  taskId     Int    @map("task_id")
  startTime DateTime   @map("start_time")
  endTime   DateTime   @map("end_time")
  task       Task     @relation(fields: [taskId], references: [id])

  @@unique([taskId, startTime, endTime], name: "TASK_TIME_TASK_ID_START_TIME_END_TIME")
  @@map("task_time")
}

model Invoice {
  id        Int           @id @default(autoincrement())
  value     Float
  file      String
  isPayed   Boolean       @map("is_payed")
  payDate   DateTime      @map("pay_date")
  comment   String
  createdAt DateTime      @default(now()) @map("created_at")
  tasks     TaskInvoice[]

  @@map("invoice")
}

model TaskInvoice {
  taskId    Int @map("task_id")
  invoiceId Int @map("invoice_id")
task       Task    @relation(fields: [taskId], references: [id])
  invoice    Invoice @relation(fields: [invoiceId], references: [id])

  @@unique([taskId, invoiceId], name: "TASK_INVOICE_TASK_ID_INVOICE_ID")
    @@index([taskId], name: "task_id")
  @@index([invoiceId], name: "invoice_id")
  @@map("task_invoice")
}
